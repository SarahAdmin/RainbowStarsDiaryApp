<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79E8DF"
    android:backgroundTint="#ABEDE5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika"
        android:text="Name: Guest"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/rs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/short_stack"
        android:text="Rainbow Stars"
        android:textColor="#04AAD4"
        android:textSize="90px"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/reading_diary_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reading_diary_title"
        android:layout_width="292dp"
        android:layout_height="136dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="casual"
        android:text="My Reading Diary"
        android:textColor="@color/purple_700"
        android:textSize="120px"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rs_title" />

    <Button
        android:id="@+id/view_read_button"
        android:layout_width="214dp"
        android:layout_height="82dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#F40000"
        android:text="View Reading History"
        android:onClick="RD_History"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@+id/insert_entry_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reading_diary_title" />

    <Button
        android:id="@+id/insert_entry_button"
        android:layout_width="223dp"
        android:layout_height="76dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FF5722"
        android:text="Add Entry"
        android:onClick="newEntry"
        app:layout_constraintBottom_toTopOf="@+id/email_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_read_button" />

    <Button
        android:id="@+id/email_button"
        android:layout_width="217dp"
        android:layout_height="79dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="#FFC107"
        android:text="Email"
        android:onClick="email_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insert_entry_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="129dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/view_read_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reading_diary_title"
        app:srcCompat="@drawable/clipart2684068" />

</androidx.constraintlayout.widget.ConstraintLayout>